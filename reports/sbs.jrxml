	<queryString language="SQL">
		<![CDATA[SELECT UPPER(DATE_FORMAT(fec_con,'%d-%b-%y')), CONCAT(nom_cli,SPACE(1),pat_cli,SPACE(1),mat_cli),
doc_cli, mo1_cli, dir_cli, 'PERUANO', cantidad, des_art,
CASE mon_con WHEN 'DOLARES' THEN cap_con * 2.9 ELSE cap_con END,
CASE mon_con WHEN 'DOLARES' THEN int_con * 2.9 ELSE int_con END
FROM
(SELECT * FROM tb_contrato c
INNER JOIN tb_cliente cl ON cl.doc_cli = c.tb_cliente_doc_cli
INNER JOIN tb_detalle_contrato dc ON dc.tb_contrato_id_con = c.id_con
INNER JOIN tb_articulo a ON dc.tb_articulo_cod_art = a.cod_art
WHERE cap_con >= 900
AND YEAR(fec_con) = 2014
UNION
SELECT * FROM tb_contrato_oro v
INNER JOIN tb_cliente cl ON cl.doc_cli = v.tb_cliente_doc_cli
INNER JOIN tb_detalle_contrato_oro dc ON dc.tb_contrato_oro_id_con = v.id_con
INNER JOIN tb_articulo a ON dc.tb_articulo_cod_art = a.cod_art
WHERE cap_con >= 900
AND YEAR(fec_con) = 2014) tb1
ORDER BY tb1.fec_con ASC]]>
