	<queryString language="SQL">
		<![CDATA[SELECT CONCAT(p_con_asoc,'-',id_con_asoc) AS 'CONTRATO',
CONCAT(a.des_art,SPACE(1),a.mar_art,SPACE(1),a.mod_art,SPACE(1),'GR.') AS 'ARTICULO',
fec_fun,mod_art
FROM tb_fundicion f
INNER JOIN tb_articulo a
ON f.tb_articulo_cod_art = a.cod_art
WHERE MONTH(fec_fun)=$P{m} AND YEAR(fec_fun)=$P{a}]]>
